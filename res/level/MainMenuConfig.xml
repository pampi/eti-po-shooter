<?xml version="1.0"?>
<buttons>
  
  <StartGame>
    <label>Start Game</label> <!-- Etykieta opcji -->
    <color hover="0,255,0,255" nohover="255,0,0,255"/> <!-- Kolor po najechaniu i kolor domyślny -->
    <action return="1"/> <!-- Numer określa do którego okna przejść -->
    <position x="50" y="150" /> <!-- Określa położenie przycisku na ekranie -->
    <size>50</size> <!-- Określa rozmiar czcionki -->
    <font default="yes"> <!-- Określa rodzaj użytaj czcionki -->
      <!--Tu wstawiasz nazwe pliku z czcionką, jeżeli default jest NOPE -->
    </font> 
  </StartGame>
  
  <ExitGame>
    <label>Exit Game</label>
    <color hover="0,255,0,255" nohover="255,0,0,255"/>
    <action return="-1"/>
    <position x="150" y="150" />
    <size>50</size>
    <font default="yes"></font>
  </ExitGame>
  
</buttons>